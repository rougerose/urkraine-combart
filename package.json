{
    "name": "uca",
    "private": true,
    "version": "0.0.0",
    "repository": "https://github.com/rougerose/urkraine-combart.git",
    "browserslist": [
        "defaults, supports es6-module"
    ],
    "scripts": {
        "clean": "rimraf dist/{css/*,js/*,images/*}",
        "scss:dev": "sass --load-path=node_modules src/scss/index.scss dist/css/uca.css",
        "scss:prod": "sass --no-source-map --load-path=node_modules src/scss/index.scss dist/css/uca.css",
        "autoprefixer": "postcss -r dist/css/uca.css",
        "copy": "recursive-copy 'src/copy' 'dist'",
        "serve": "browser-sync start -p 'http://localhost:8888/uacombart.dev/' -f \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
        "watch:css": "chokidar './src/**/*.scss' -c 'npm run build:dev'",
        "watch": "run-p serve watch:*",
        "rollup": "rollup --config",
        "build:dev": "run-s clean copy scss:dev autoprefixer",
        "build:prod": "run-s clean copy scss:prod autoprefixer",
        "dev": "run-s build:dev watch",
        "prod": "NODE_ENV=production npm run build:prod"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.14",
        "browser-sync": "^2.29.1",
        "chokidar-cli": "^3.0.0",
        "modern-css-reset": "^1.4.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.21",
        "postcss-cli": "^10.1.0",
        "postcss-csso": "^6.0.1",
        "recursive-fs": "^2.1.0",
        "rimraf": "^4.4.1",
        "rollup": "^3.20.2",
        "sass": "^1.60.0",
        "sass-mq": "^6.0.0"
    }
}
